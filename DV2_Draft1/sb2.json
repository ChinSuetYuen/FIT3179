{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Always Keep Things Spotless To Ensure A Clean Gateaway: Crime Rates in Malaysia per 1000 Population by State!",
    "font": "Candara",
    "fontSize": 25,
    "anchor": "middle",
    "align": "center"
  },
  "vconcat": [
    {
      "width": 1200,
      "height": 500,
      "projection": { "type": "equalEarth" },
      "data": {
        "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/my.topojson",
        "format": { "type": "topojson", "feature": "my" }
      },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/map.csv",
            "format": { "type": "csv" }
          },
          "mark": {
            "type": "text",
            "align": "center",
            "fontWeight": "bold",
            "dy" : -200
          },
          "transform": [
            {
              "filter": "datum.State == staterank.State"
            },
            {
              "calculate": "'Crime Rate of ' + datum['State'] + ';' + datum['CrimeRate']",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],

          "encoding": {
            "text": { "field": "text_annotation" }
          }
        },
        {
          "transform": [
            { "filter": "datum.State != 'Malaysia'" },
            {
              "lookup": "properties.name",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/fullcrime.csv",
                  "format": { "type": "csv" }
                },
                "key": "State",
                "fields": ["State", "Year", "CrimeRate", "TotalCrime"]
              }
            }
          ],
          "mark": {
            "type": "geoshape",
            "stroke": "#fff",
            "strokeWidth": 0.5,
            "cursor": "pointer"
          },
          "params": [
            {
              "name": "staterank",
              "select": { "type": "point", "fields": ["State"] }
            }
          ],
          "encoding": {
            "fillOpacity": {
              "condition": { "param": "staterank", "value": 1 },
              "value": 0.3
            },
            "stroke": {
              "condition": {
                "param": "staterank",
                "value": "#3f0000"
              },
              "value": "transparent"
            },
            "strokeWidth": {
              "condition": {
                "param": "staterank",
                "value": 1
              },
              "value": 0
            },
            "color": {
              "field": "CrimeRate",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [1.25, 1.5, 1.75, 2.0, 2.5],
                "range": [
                  "#fee5d9",
                  "#fcbba1",
                  "#fc9272",
                  "#fb6a4a",
                  "#de2d26",
                  "#a50f15"
                ]
              },
              "legend": {
                "title": "Crime Rate",
                "orient": "right",
                "offset": -150,
                "format": ".2f",
                "labelOffset": 40
              }
            },
            "tooltip": [
              { "field": "properties.name", "title": "State" },
              { "field": "Year", "type": "quantitative", "title": "Year" },
              {
                "field": "TotalCrime",
                "type": "quantitative",
                "title": "Total Crimes"
              },
              {
                "field": "CrimeRate",
                "type": "quantitative",
                "format": ".2f",
                "title": "Crime Rate per 10,000"
              }
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/fullcrime.csv",
            "format": { "type": "csv" }
          },
          "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
          "transform": [
            {
              "lookup": "State",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/my.topojson",
                  "format": { "type": "topojson", "feature": "my" }
                },
                "key": "properties.name"
              },
              "as": "geo"
            }
          ]
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/map.csv",
            "format": { "type": "csv" }
          },
          "mark": {
            "type": "text",
            "fontSize": 13,
            "dy": 60,
            "dx": -520,
            "fontWeight": 100,
            "text": " "
          },
          "transform": [
            {
              "window": [{ "op": "rank", "as": "ranking" }],
              "sort": [{ "field": "CrimeRate", "order": "descending" }]
            },
            { "filter": "datum.ranking == 1" },

            {
              "calculate": "'Highest Crime Rate ;' + datum['State'] + ' :' + datum['CrimeRate']",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "encoding": {
            "text": { "field": "text_annotation" },
            "fill": {
              "condition": { "param": "staterank", "value": "black" },
              "value": "snow"
            }
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/map.csv",
            "format": { "type": "csv" }
          },
          "mark": {
            "type": "text",
            "color": "black",
            "fontSize": 13,
            "dy": 140,
            "dx": -240,
            "fontWeight": 100,
            "text": " "
          },
          "transform": [
            {
              "window": [{ "op": "rank", "as": "ranking" }],
              "sort": [{ "field": "CrimeRate", "order": "ascending" }]
            },
            { "filter": "datum.ranking == 1" },

            {
              "calculate": "'Lowest Crime Rate ;' + datum['State'] + ' :' + datum['CrimeRate']",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "encoding": {
            "text": { "field": "text_annotation" },
            "fill": {
              "condition": { "param": "staterank", "value": "black" },
              "value": "snow"
            }
          }
        }
      ]
    },
    {
      "hconcat": [
        {
          "title": {
            "text": "Rank of Crime Rate per 1000 Population by State",
            "font": "Candara",
            "fontSize": 25
          },
          "width": 700,
          "height": 600,
          "data": {
            "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/crime.csv"
          },
          "transform": [
            {
              "window": [
                {
                  "op": "rank",
                  "as": "Rank"
                }
              ],
              "groupby": ["Year"],
              "sort": [{ "field": "CrimeRate", "order": "descending" }]
            }
          ],
          "layer": [
            {
              "mark": "line",
              "params": [
                {
                  "name": "staterank",
                  "select": { "type": "point", "fields": ["State"] }
                }
              ],
              "encoding": {
                "x": {
                  "field": "Year",
                  "type": "ordinal",
                  "axis": {
                    "labelFont": "Candara",
                    "titleFont": "Candara",
                    "title": "Year"
                  }
                },
                "y": {
                  "field": "Rank",
                  "type": "quantitative",
                  "sort": "ascending",
                  "axis": {
                    "labelFont": "Candara",
                    "titleFont": "Candara",
                    "title": "Rank",
                    "grid": true,
                    "tickMinStep": 1,
                    "labelExpr": "datum.value > 0 ? datum.label : ''"
                  }
                },
                "color": {
                  "field": "State",
                  "type": "nominal",
                  "legend": null
                },
                "strokeWidth": {
                  "condition": [
                    {
                      "param": "staterank",
                      "empty": false,
                      "value": 3
                    }
                  ],
                  "value": 1
                },
                "opacity": {
                  "condition": { "param": "staterank", "value": 1 },
                  "value": 0.2
                },
                "tooltip": [
                  { "field": "State", "type": "nominal", "title": "State" },
                  { "field": "Year", "type": "ordinal", "title": "Year" },
                  {
                    "field": "CrimeRate",
                    "type": "quantitative",
                    "format": ".2f",
                    "title": "Crime Rate"
                  },
                  { "field": "Rank", "type": "quantitative", "title": "Rank" }
                ]
              }
            },
            {
              "mark": {
                "type": "point",
                "filled": true,
                "size": 100
              },
              "encoding": {
                "x": {
                  "field": "Year",
                  "type": "ordinal"
                },
                "y": {
                  "field": "Rank",
                  "type": "quantitative",
                  "sort": "descending"
                },
                "color": {
                  "field": "State",
                  "type": "nominal",
                  "scale": {
                    "domain": [
                      "Johor",
                      "Kedah",
                      "Kelantan",
                      "Melaka",
                      "Negeri Sembilan",
                      "Pahang",
                      "Perak",
                      "Perlis",
                      "Pulau Pinang",
                      "Sabah",
                      "Sarawak",
                      "Selangor",
                      "Terengganu",
                      "Kuala Lumpur"
                    ],
                    "range": [
                      "#adad00",
                      "#ff9838",
                      "#ff0033",
                      "#b30000",
                      "#9ecae1",
                      "#6baed6",
                      "#3182bd",
                      "#08519c",
                      "#b2abd2",
                      "#8073ac",
                      "#542788",
                      "#f1b6da",
                      "#de77ae",
                      "#c51b7d"
                    ]
                  }
                },
                "opacity": {
                  "condition": { "param": "staterank", "value": 1 },
                  "value": 0.2
                },
                "tooltip": [
                  { "field": "State", "type": "nominal", "title": "State" },
                  { "field": "Year", "type": "ordinal", "title": "Year" },
                  {
                    "field": "CrimeRate",
                    "type": "quantitative",
                    "format": ".2f",
                    "title": "Crime Rate per 1000"
                  },
                  { "field": "Rank", "type": "quantitative", "title": "Rank" }
                ]
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "color": "snow",
                "font": "Candara",
                "fontSize": 15,
                "dy": -22,
                "dx": -340
              },
              "transform": [{ "filter": "datum.Year == 2015" }],
              "encoding": {
                "y": {
                  "field": "Rank",
                  "type": "quantitative",
                  "sort": "descending"
                },
                "color": {
                  "condition": { "param": "staterank", "value": "black" },
                  "value": "snow"
                },
                "text": {
                  "field": "State",
                  "type": "nominal"
                },
                "opacity": {
                  "condition": { "param": "staterank", "value": 1 },
                  "value": 0
                }
              }
            }
          ]
        },
        {
          "vconcat": [
            {
              "title": {
                "text": "The Counts of each Crime In Selected State",
                "font": "Candara",
                "fontSize": 25,
                "anchor": "start"
              },
              "width": 300,
              "height": 300,
              "data": {
                "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/barlink.csv",
                "format": { "type": "csv" }
              },
              "transform": [
                {
                  "filter": "datum.State == staterank.State"
                }
              ],
              "mark": "bar",
              "encoding": {
                "y": {
                  "field": "CrimeType",
                  "type": "nominal",
                  "axis": {
                    "labelFont": "Candara",
                    "titleFont": "Candara",
                    "title": "Type of Crime"
                  },
                  "scale": {
                    "domain": [
                      "Sexual Violence",
                      "Assault",
                      "Murder",
                      "Robbery",
                      "House break-ins",
                      "Vehicles Theft",
                      "Other Thefts"
                    ]
                  }
                },
                "x": {
                  "field": "Count",
                  "type": "quantitative",
                  "axis": {
                    "labelFont": "Candara",
                    "titleFont": "Candara",
                    "title": "Crime Count"
                  }
                },
                "color": {
                  "field": "CrimeType",
                  "scale": {
                    "domain": [
                      "Sexual Violence",
                      "Assault",
                      "Murder",
                      "Robbery",
                      "House break-ins",
                      "Vehicles Theft",
                      "Other Thefts"
                    ],
                    "range": [
                      "#fcbba1",
                      "#ef3b2c",
                      "#99000d",
                      "#cccccc",
                      "#969696",
                      "#636363",
                      "#252525"
                    ]
                  }
                },
                "tooltip": [
                  {
                    "field": "CrimeType",
                    "type": "nominal",
                    "title": "Crime Type: "
                  },
                  {
                    "field": "Count",
                    "type": "quantitative",
                    "title": "Count: "
                  }
                ]
              }
            },
            {
              "width": 300,
              "height": 260,
              "data": {
                "url": "funfacts.csv",
                "format": { "type": "csv" }
              },
              "mark": {
                "type": "text",
                "align": "center",
                "baseline": "line-top",
                "fontWeight": "bold",
                "dy": -110
              },
              "transform": [
                {
                  "filter": "datum.State == staterank.State"
                },
                {
                  "calculate": "'Crime Rate of ' + datum['State'] + ';;' + datum['FunFact']",
                  "as": "text_annotation_raw"
                },
                {
                  "calculate": "split(datum.text_annotation_raw, ';')",
                  "as": "text_annotation"
                }
              ],

              "encoding": {
                "text": {"field": "text_annotation"}
              }
            }
          ],
          "spacing": 30
        }
      ],
      "resolve": {
        "scale": {
          "color": "independent"
        }
      },
      "spacing": 40
    }
  ],
  "spacing": 60,
  "config": {
    "style": {
      "guide-label": {
        "font": "Candara",
        "fontSize": 20
      },
      "guide-title": {
        "font": "Candara",
        "fontSize": 20
      },
      "text": {
        "font": "Candara",
        "fontSize": 20
      }
    },
    "view": {
      "fill": "#faffff"
    },
    "title": {
      "font": "Candara",
      "fontSize": 25
    },
    "background": "snow"
  }
}
