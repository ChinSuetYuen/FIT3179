{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "hconcat": [
    {
      "title": " ",
      "width": 510,
      "height": 300,
      "data": {
        "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/mycrimet.csv",
        "format": { "type": "csv" }
      },
      "transform": [{ "filter": "datum.Year != 'Total'" }],
      "layer": [
        {
          "mark": "line",
          "encoding": {
            "y": {
              "field": "CrimeRate",
              "type": "quantitative",
              "title": "Malaysia's Crime Rate"
            },
            "x": {
              "field": "Year",
              "type": "ordinal",
              "axis": {
                "labelFont": "Candara",
                "titleFont": "Candara",
                "title": "Year"
              }
            },
            "color": {
              "value": "firebrick"
            },
            "tooltip": [
              { "field": "State", "type": "nominal", "title": "State" },
              { "field": "Year", "type": "quantitative", "title": "Year" }
            ]
          }
        },
        {
          "mark": { "type": "point", "filled": true, "size": 100 },
          "params": [
            {
              "name": "year_selection",
              "select": { "type": "point", "fields": ["Year"] }
            }
          ],
          "encoding": {
            "opacity": {
              "condition": { "param": "year_selection", "value": 1 },
              "value": 0.1
            },

            "y": { "field": "CrimeRate", "type": "quantitative" },
            "x": {
              "field": "Year",
              "type": "ordinal",
              "axis": {
                "labelFont": "Candara",
                "titleFont": "Candara",
                "title": "Year"
              }
            },
            "color": {
              "condition": { "param": "year_selection", "value": "darkred" },
              "value": "firebrick"
            },
            "tooltip": [
              {
                "field": "Total",
                "type": "quantitative",
                "title": "Total Crime"
              },
              { "field": "Year", "type": "quantitative", "title": "Year" },
              {
                "field": "CrimeRate",
                "type": "quantitative",
                "title": "Crime Rate"
              }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "line-bottom",
            "dy": 30
          },
          "transform": [
            { "filter": "datum.Year != 2015" },
            { "filter": "datum.Year != 2022" }
          ],
          "encoding": {
            "text": { "field": "CrimeRate" },
            "y": { "field": "CrimeRate", "type": "quantitative" },
            "x": {
              "field": "Year",
              "type": "ordinal",
              "axis": {
                "labelFont": "Candara",
                "titleFont": "Candara",
                "title": "Year"
              }
            },
            "color": {
              "condition": { "param": "year_selection", "value": "black" },
              "value": "#faffff"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "line-bottom",
            "fontWeight": "bold",
            "fontSize": 18,
            "dy": 30
          },
          "transform": [
            { "filter": "datum.Year == 2015 || datum.Year == 2022" }
          ],
          "encoding": {
            "text": { "field": "CrimeRate" },
            "y": { "field": "CrimeRate", "type": "quantitative" },
            "x": {
              "field": "Year",
              "type": "ordinal",
              "axis": {
                "labelFont": "Candara",
                "titleFont": "Candara",
                "title": "Year"
              }
            },
            "color": {
              "condition": { "param": "year_selection", "value": "black" },
              "value": "#faffff"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "line-bottom",
            "fontSize": 15,
            "dy": 95,
            "dx": -240
          },
          "transform": [
            { "filter": "datum.Year == 2022" },
            {
              "calculate": "'Crime Rate in Malaysia; has reduced by more; than half since 2015!'",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "encoding": {
            "text": { "field": "text_annotation" },
            "color": {
              "condition": { "param": "year_selection", "value": "black" },
              "value": "#faffff"
            }
          }
        },
        {
          "data": {
            "url": "law.csv",
            "format": { "type": "csv" }
          },
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "line-bottom",
            "fontSize": 15,
            "dy": 60,
            "dx": -240,
            "fontWeight":"bold"
          },
          "transform": [
            {
              "filter": "datum.Year  == year_selection.Year"
            },
            {
              "calculate": " ';;' + datum['Fun']",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "encoding": {
            "text": { "field": "text_annotation" }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "line-bottom",
            "fontSize": 70,
            "dy": -40,
            "dx": 210,
            "text": "â†“",
            "color": "red"
          },
          "transform": [
            { "filter": "datum.Year == 2022" }
          ],
          "encoding": {
            "color": {
              "condition": { "param": "year_selection", "value": "red" },
              "value": "#faffff"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "line-bottom",
            "fontSize": 20,
            "dy": -65,
            "dx": 160,
            "text": "reduce",
            "color": "red"
          },
          "transform": [
            { "filter": "datum.Year == 2022" }
          ],
          "encoding": {
            "color": {
              "condition": { "param": "year_selection", "value": "red" },
              "value": "#faffff"
            }
          }
        }
      ]
    },
    {
      "title": " ",
      "width": 280,
      "height": 300,
      "data": {
        "url": "https://raw.githubusercontent.com/ChinSuetYuen/FIT3179/refs/heads/main/DV2_Draft1/mycrimet.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        {
          "filter": "datum.Year == (year_selection.Year? year_selection.Year: 'Total')"
        }
      ],
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "Count",
              "aggregate": "sum",
              "type": "quantitative",
              "title": "Count"
            },
            "y": {
              "field": "CrimeGroup",
              "type": "ordinal",
              "axis": {
                "labelFont": "Candara",
                "titleFont": "Candara",
                "title": "Type of Crime"
              },
              "scale": {
                "domain": [
                  "Sexual Violence",
                  "Assault",
                  "Murder",
                  "Robbery",
                  "House break-ins",
                  "Vehicles Theft",
                  "Other Thefts"
                ]
              }
            },
            "color": {
              "field": "CrimeGroup",
              "scale": {
                "domain": [
                  "Sexual Violence",
                  "Assault",
                  "Murder",
                  "Robbery",
                  "House break-ins",
                  "Vehicles Theft",
                  "Other Thefts"
                ],
                "range": [
                  "#fcbba1",
                  "#ef3b2c",
                  "#99000d",
                  "#cccccc",
                  "#969696",
                  "#636363",
                  "#252525"
                ]
              }
            },
            "tooltip": [
              { "field": "Year", "type": "ordinal", "title": "Year" },
              {
                "field": "CrimeGroup",
                "type": "ordinal",
                "title": "Type Of Crime"
              },
              { "field": "Count", "type": "quantitative", "title": "Total Crime" }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "line-bottom",
            "fontSize": 18,
            "dy": -120,
            "dx": 130,
            "color": "maroon"
          },
          "transform": [
            {
              "calculate": "'You are 97 times; more likely to get; your vehicles stolen; than murdered! '",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "encoding": {
            "text": { "field": "text_annotation" },
            "color": {
              "condition": { "param": "year_selection", "value": "maroon" },
              "value": "#faffff"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "line-bottom",
            "dx": 2,
            "dy": 7
          },
          "transform": [
            {"filter": "datum.CrimeGroup != 'Other Thefts'"},
            {"filter": "datum.CrimeGroup != 'Vehicles Theft'"}
          ],
          "encoding": {
            "text": { "field": "Count" , "format": ","},
            "x": {
              "field": "Count",
              "aggregate": "sum",
              "type": "quantitative",
              "title": "Count"
            },
            "y": {
              "field": "CrimeGroup",
              "type": "ordinal",
              "axis": {
                "labelFont": "Candara",
                "titleFont": "Candara",
                "title": "Type of Crime"
              },
              "scale": {
                "domain": [
                  "Sexual Violence",
                  "Assault",
                  "Murder",
                  "Robbery",
                  "House break-ins",
                  "Vehicles Theft",
                  "Other Thefts"
                ]
              }
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "line-bottom",
            "color": "white",
            "dx": -40,
            "dy": 10
          },
          "transform": [
            {"filter": "datum.CrimeGroup == 'Other Thefts' || datum.CrimeGroup == 'Vehicles Theft'"}
          ],
          "encoding": {
            "text": { "field": "Count" , "format": ","},
            "x": {
              "field": "Count",
              "aggregate": "sum",
              "type": "quantitative",
              "title": "Count"
            },
            "y": {
              "field": "CrimeGroup",
              "type": "ordinal",
              "axis": {
                "labelFont": "Candara",
                "titleFont": "Candara",
                "title": "Type of Crime"
              },
              "scale": {
                "domain": [
                  "Sexual Violence",
                  "Assault",
                  "Murder",
                  "Robbery",
                  "House break-ins",
                  "Vehicles Theft",
                  "Other Thefts"
                ]
              }
            }
          }
        }
      ]
    }
  ],
  "spacing": 40,
  "config": {
    "style": {
      "guide-label": {
        "font": "Candara",
        "fontSize": 16
      },
      "guide-title": {
        "font": "Candara",
        "fontSize": 16
      },
      "text": {
        "font": "Candara",
        "fontSize": 16
      }
    },
    "view": {
      "fill": "#faffff"
    },
    "title": {
      "font": "Candara",
      "fontSize": 20
    },
    "background": "snow"
  }
}
